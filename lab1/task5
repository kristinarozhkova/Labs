# –°–∫—Ä–∏–ø—Ç –±–æ—Ç—É #
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

BOT_TOKEN = '****'  # –ó–Ω–∞—á–µ–Ω–Ω—è –æ—Ç—Ä–∏–º–∞–Ω–æ–≥–æ —Ç–æ–∫–µ–Ω—É –±–æ—Ç–∞

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("–ü—Ä–∏–≤—ñ—Ç! –Ø –±–æ—Ç. –í–∏–∫–æ—Ä–∏—Å—Ç–∞–π /menu, /whisper –∞–±–æ /scream")

async def menu(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = (
        "üìú –ú–µ–Ω—é –∫–æ–º–∞–Ω–¥:\n"
        "/menu ‚Äî –ø–æ–∫–∞–∑–∞—Ç–∏ —Ü–µ –º–µ–Ω—é\n"
        "/whisper <—Ç–µ–∫—Å—Ç> ‚Äî –Ω–∞–ø–∏—Å–∞—Ç–∏ —Ç–∏—Ö–æ (lowercase)\n"
        "/scream <—Ç–µ–∫—Å—Ç> ‚Äî –∫—Ä–∏–∫–Ω—É—Ç–∏ (UPPERCASE)"
    )
    await update.message.reply_text(text)

# /whisper
async def whisper(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if context.args:
        text = ' '.join(context.args).lower()
        await update.message.reply_text(text)
    else:
        await update.message.reply_text("‚ùå –í–≤–µ–¥—ñ—Ç—å —Ç–µ–∫—Å—Ç –ø—ñ—Å–ª—è –∫–æ–º–∞–Ω–¥–∏, –Ω–∞–ø—Ä–∏–∫–ª–∞–¥: /whisper –ü—Ä–∏–≤—ñ—Ç")

# /scream
async def scream(update: Update, context: ContextTypes.DEFAULT_TYPE):
    if context.args:
        text = ' '.join(context.args).upper()
        await update.message.reply_text(text)
    else:
        await update.message.reply_text("‚ùå –í–≤–µ–¥—ñ—Ç—å —Ç–µ–∫—Å—Ç –ø—ñ—Å–ª—è –∫–æ–º–∞–Ω–¥–∏, –Ω–∞–ø—Ä–∏–∫–ª–∞–¥: /scream –ü—Ä–∏–≤—ñ—Ç")


if name == 'main':
    app = ApplicationBuilder().token(BOT_TOKEN).build()

    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("menu", menu))
    app.add_handler(CommandHandler("whisper", whisper))
    app.add_handler(CommandHandler("scream", scream))

    print("–ë–æ—Ç –∑–∞–ø—É—â–µ–Ω–æ...")
    app.run_polling()
