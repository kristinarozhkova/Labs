import socket

HOST = '127.0.0.1'
PORT = 65432

with socket.socket(socket.AF_INET, socket.SOCK_STREAM) as s:
    s.bind((HOST, PORT))
    s.listen()
    print(f"Сервер запущено на {HOST}:{PORT}")
    while True:
        conn, addr = s.accept()
        with conn:
            print(f"Підключено {addr}")
            while True:
                data = conn.recv(1024)
                if not data:
                    break
                print(f"Отримано: {data.decode()}")
                conn.sendall(data)
